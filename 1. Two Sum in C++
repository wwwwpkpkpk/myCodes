class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int target) {
        int ans1 = 0, ans2 = 1;
        vector<int> ans;
        while(nums[ans1] + nums[ans2] != target && ans1 != nums.size() - 1) {
            ans2++;
            if(ans2 == nums.size() - 1 && nums[ans1] + nums[ans2] != target) {
                ans1++;
                ans2 = ans1+1;
            }
        }
        ans.push_back(ans1);
        ans.push_back(ans2);
        return ans;
    }
};
